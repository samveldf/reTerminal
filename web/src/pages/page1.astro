---
import dayjs from 'dayjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getGoogleHeadlines } from '../services/newsService';
import { getWeather } from '../services/weatherService';

const weather = await getWeather();
const news = await getGoogleHeadlines();
const now = dayjs();
---

<BaseLayout>
  <main class="epaper-screen page1-screen">
    <header class="cyber-header">
      <div class="header-title">PAGE 1 // WEATHER + TOP NEWS</div>
      <div class="header-time">{`TOKYO ${now.format('MM-DD HH:mm')}`}</div>
    </header>

    <div class="split-layout">
      <section class="panel weather-panel">
        <div class="section-head">TODAY + NEXT 3 DAYS</div>
        <div class="weather-track">
          {
            weather.days.map((day) => {
              const toSolarPercent = (timeText: string, fallback: number): number => {
                const matched = timeText.match(/^(\d{2}):(\d{2})$/);
                if (!matched) return fallback;
                const totalMinutes = Number(matched[1]) * 60 + Number(matched[2]);
                const normalized = ((totalMinutes - 240) / 900) * 100;
                return Math.max(8, Math.min(96, Math.round(normalized)));
              };

              const sunriseLevel = toSolarPercent(day.sunrise, 34);
              const sunsetLevel = toSolarPercent(day.sunset, 76);

              return (
                <article class="day-card">
                  <div class="day-head">
                    <span>{day.label}</span>
                    <span>{day.date}</span>
                  </div>
                  <div class="day-main">
                    <span class="icon-emoji">{day.icon}</span>
                    <span class="icon-symbol">{day.symbol}</span>
                  </div>
                  <div class="day-desc">{day.description}</div>
                  <div class="day-temps">{`${day.maxTemp}° / ${day.minTemp}°`}</div>
                  <div class="day-extra">{`HUM ${day.humidity}%`}</div>

                  <div class="day-hud">
                    <div class="hud-label-row">
                      <span>SOLAR WINDOW</span>
                      <span class="hud-glyph">{day.date}</span>
                    </div>
                    <div class="sun-grid">
                      <div class="sun-block">
                        <div class="sun-row">
                          <span class="sun-icon-badge rise-badge">☀</span>
                          <span class="sun-label">SUNRISE</span>
                          <span class="sun-time">{day.sunrise}</span>
                        </div>
                        <div class="sun-track">
                          <span class="sun-progress rise-progress" style={`width:${sunriseLevel}%`}></span>
                        </div>
                      </div>
                      <div class="sun-block">
                        <div class="sun-row">
                          <span class="sun-icon-badge set-badge">☾</span>
                          <span class="sun-label">SUNSET</span>
                          <span class="sun-time">{day.sunset}</span>
                        </div>
                        <div class="sun-track">
                          <span class="sun-progress set-progress" style={`width:${sunsetLevel}%`}></span>
                        </div>
                      </div>
                    </div>
                    <div class="hud-scan">
                      <span>◢</span>
                      <span>◉</span>
                      <span>◣</span>
                    </div>
                  </div>
                </article>
              );
            })
          }
        </div>
      </section>

      <section class="panel news-panel">
        <div class="section-head">TOP HEADLINES</div>
        <div class="headline-list">
          {
            news.headlines.slice(0, 6).map((item, idx) => (
              <div class="headline-item">{`${idx + 1}. ${item.title}`}</div>
            ))
          }
        </div>
      </section>
    </div>

    <div class="corner-note">1 / 3</div>
  </main>
</BaseLayout>

<style>
  .page1-screen {
    gap: 6px;
    padding: 6px;
    position: relative;
  }

  .split-layout {
    flex: 1;
    min-height: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .weather-panel {
    flex: 10;
    min-height: 0;
    border-color: var(--line);
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .news-panel {
    flex: 10;
    min-height: 0;
    border-color: var(--warn);
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .section-head {
    height: 20px;
    color: var(--accent);
    font-size: 14px;
    font-weight: 800;
    line-height: 20px;
    letter-spacing: 0.6px;
  }

  .weather-track {
    flex: 1;
    min-height: 0;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    grid-template-rows: 1fr;
    gap: 5px;
    overflow: hidden;
  }

  .day-card {
    border: 1px solid var(--line);
    padding: 7px 8px;
    overflow: hidden;
    position: relative;
    background:
      linear-gradient(180deg, rgba(0, 0, 255, 0.06), rgba(255, 255, 255, 0) 52%),
      #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 3px;
  }

  .day-head {
    display: flex;
    justify-content: space-between;
    color: var(--accent);
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 0;
    line-height: 16px;
  }

  .day-main {
    display: flex;
    align-items: center;
    gap: 5px;
    line-height: 21px;
  }

  .icon-emoji {
    color: var(--line);
    font-size: 20px;
    line-height: 20px;
  }

  .icon-symbol {
    color: var(--line);
    font-size: 20px;
    font-weight: 800;
    line-height: 21px;
  }

  .day-desc {
    font-size: 13px;
    line-height: 14px;
    color: var(--text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 14px;
  }

  .day-temps {
    color: var(--line);
    font-size: 16px;
    line-height: 17px;
    font-weight: 800;
  }

  .day-extra {
    color: var(--muted);
    font-size: 13px;
    line-height: 14px;
    font-weight: 700;
  }

  .day-hud {
    margin-top: auto;
    border: 1px dashed rgba(0, 0, 255, 0.78);
    padding: 4px 5px 4px;
    background:
      linear-gradient(180deg, rgba(0, 255, 0, 0.06), rgba(0, 255, 0, 0.01)),
      repeating-linear-gradient(0deg, rgba(0, 0, 255, 0.06) 0 1px, transparent 1px 4px);
    display: flex;
    flex-direction: column;
    gap: 3px;
    min-height: 72px;
  }

  .hud-label-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--accent);
    font-size: 10px;
    line-height: 11px;
    font-weight: 800;
    letter-spacing: 0.4px;
  }

  .hud-glyph {
    color: var(--line);
    font-size: 10px;
    line-height: 11px;
    font-weight: 700;
  }

  .hud-scan {
    margin-top: auto;
    border-top: 1px solid rgba(0, 0, 255, 0.35);
    color: var(--muted);
    font-size: 9px;
    line-height: 10px;
    font-weight: 700;
    display: flex;
    justify-content: space-between;
    letter-spacing: 0.4px;
  }

  .sun-grid {
    display: grid;
    grid-template-rows: repeat(2, minmax(0, 1fr));
    row-gap: 3px;
    margin-top: 0;
  }

  .sun-block {
    display: grid;
    grid-template-rows: auto auto;
    row-gap: 1px;
  }

  .sun-row {
    display: grid;
    grid-template-columns: 14px 1fr auto;
    align-items: center;
    column-gap: 4px;
    min-height: 13px;
  }

  .sun-icon-badge {
    width: 13px;
    height: 13px;
    border: 1px solid rgba(0, 0, 255, 0.78);
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
    font-size: 9px;
    line-height: 9px;
    font-weight: 800;
  }

  .rise-badge {
    color: #d00000;
    background: rgba(255, 255, 0, 0.24);
  }

  .set-badge {
    color: #0000ff;
    background: rgba(180, 180, 255, 0.28);
  }

  .sun-label {
    color: var(--line);
    font-size: 10px;
    line-height: 11px;
    font-weight: 800;
    letter-spacing: 0.2px;
  }

  .sun-time {
    color: var(--text);
    font-size: 12px;
    line-height: 12px;
    font-weight: 800;
  }

  .sun-track {
    height: 5px;
    border: 1px solid rgba(0, 0, 255, 0.62);
    background: rgba(255, 255, 255, 0.86);
    position: relative;
    overflow: hidden;
  }

  .sun-progress {
    display: block;
    height: 100%;
  }

  .rise-progress {
    background:
      linear-gradient(90deg, rgba(255, 128, 0, 0.82), rgba(255, 192, 0, 0.42)),
      repeating-linear-gradient(90deg, rgba(255, 128, 0, 0.7) 0 2px, rgba(255, 128, 0, 0.2) 2px 4px);
  }

  .set-progress {
    background:
      linear-gradient(90deg, rgba(0, 0, 255, 0.84), rgba(0, 180, 255, 0.38)),
      repeating-linear-gradient(90deg, rgba(0, 0, 255, 0.7) 0 2px, rgba(0, 0, 255, 0.22) 2px 4px);
  }

  .headline-list {
    flex: 1;
    min-height: 0;
    display: grid;
    grid-template-rows: repeat(6, 1fr);
    gap: 1px;
  }

  .headline-item {
    border-left: 3px solid var(--line);
    padding-left: 7px;
    font-size: 15px;
    line-height: 19px;
    color: var(--text);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-weight: 700;
    display: flex;
    align-items: center;
  }

  .corner-note {
    position: absolute;
    right: 8px;
    bottom: 6px;
    color: var(--muted);
    font-size: 13px;
    font-weight: 700;
    background: rgba(255, 255, 255, 0.86);
    border: 1px solid var(--line);
    padding: 1px 6px;
    line-height: 18px;
  }
</style>
