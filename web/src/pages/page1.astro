---
import dayjs from 'dayjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getGoogleHeadlines } from '../services/newsService';
import { getWeather } from '../services/weatherService';

const weather = await getWeather();
const news = await getGoogleHeadlines();
const now = dayjs();
---

<BaseLayout>
  <main class="epaper-screen page1-screen">
    <header class="cyber-header">
      <div class="header-title">PAGE 1 // WEATHER + TOP NEWS</div>
      <div class="header-time">{`TOKYO ${now.format('MM-DD HH:mm')}`}</div>
    </header>

    <div class="split-layout">
      <section class="panel weather-panel">
        <div class="section-head">TODAY + NEXT 3 DAYS</div>
        <div class="weather-track">
          {
            weather.days.map((day) => {
              const humidityValue = Math.max(0, Math.min(100, Number(day.humidity) || 0));
              const tempSpread = Math.max(0, (Number(day.maxTemp) || 0) - (Number(day.minTemp) || 0));
              const spreadLevel = Math.min(100, Math.max(10, tempSpread * 11));
              const humidityLevel = Math.max(10, humidityValue);

              return (
                <article class="day-card">
                  <div class="day-head">
                    <span>{day.label}</span>
                    <span>{day.date}</span>
                  </div>
                  <div class="day-main">
                    <span class="icon-emoji">{day.icon}</span>
                    <span class="icon-symbol">{day.symbol}</span>
                  </div>
                  <div class="day-desc">{day.description}</div>
                  <div class="day-temps">{`${day.maxTemp}° / ${day.minTemp}°`}</div>
                  <div class="day-extra">{`HUM ${day.humidity}%`}</div>

                  <div class="day-hud">
                    <div class="hud-label-row">
                      <span>CYBER CLIMATE</span>
                      <span class="hud-glyph">{day.icon}</span>
                    </div>
                    <div class="hud-meter">
                      <span class="meter-label">HUM</span>
                      <span class="meter-track">
                        <span class="meter-fill" style={`width:${humidityLevel}%`}></span>
                      </span>
                    </div>
                    <div class="hud-meter">
                      <span class="meter-label">RNG</span>
                      <span class="meter-track">
                        <span class="meter-fill temp-fill" style={`width:${spreadLevel}%`}></span>
                      </span>
                    </div>
                    <div class="hud-scan">
                      <span>◢</span>
                      <span>◉</span>
                      <span>◣</span>
                    </div>
                  </div>
                </article>
              );
            })
          }
        </div>
      </section>

      <section class="panel news-panel">
        <div class="section-head">TOP HEADLINES</div>
        <div class="headline-list">
          {
            news.headlines.slice(0, 6).map((item, idx) => (
              <div class="headline-item">{`${idx + 1}. ${item.title}`}</div>
            ))
          }
        </div>
      </section>
    </div>

    <div class="corner-note">1 / 3</div>
  </main>
</BaseLayout>

<style>
  .page1-screen {
    gap: 6px;
    padding: 6px;
    position: relative;
  }

  .split-layout {
    flex: 1;
    min-height: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .weather-panel {
    flex: 10;
    min-height: 0;
    border-color: var(--line);
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }

  .news-panel {
    flex: 10;
    min-height: 0;
    border-color: var(--warn);
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .section-head {
    height: 20px;
    color: var(--accent);
    font-size: 14px;
    font-weight: 800;
    line-height: 20px;
    letter-spacing: 0.6px;
  }

  .weather-track {
    flex: 1;
    min-height: 0;
    display: grid;
    grid-template-columns: repeat(4, minmax(0, 1fr));
    grid-template-rows: 1fr;
    gap: 5px;
    overflow: hidden;
  }

  .day-card {
    border: 1px solid var(--line);
    padding: 7px 8px;
    overflow: hidden;
    position: relative;
    background:
      linear-gradient(180deg, rgba(0, 0, 255, 0.06), rgba(255, 255, 255, 0) 52%),
      #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    gap: 3px;
  }

  .day-head {
    display: flex;
    justify-content: space-between;
    color: var(--accent);
    font-size: 14px;
    font-weight: 700;
    margin-bottom: 0;
    line-height: 16px;
  }

  .day-main {
    display: flex;
    align-items: center;
    gap: 5px;
    line-height: 21px;
  }

  .icon-emoji {
    color: var(--line);
    font-size: 20px;
    line-height: 20px;
  }

  .icon-symbol {
    color: var(--line);
    font-size: 20px;
    font-weight: 800;
    line-height: 21px;
  }

  .day-desc {
    font-size: 13px;
    line-height: 14px;
    color: var(--text);
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 14px;
  }

  .day-temps {
    color: var(--line);
    font-size: 16px;
    line-height: 17px;
    font-weight: 800;
  }

  .day-extra {
    color: var(--muted);
    font-size: 13px;
    line-height: 14px;
    font-weight: 700;
  }

  .day-hud {
    margin-top: auto;
    border: 1px dashed rgba(0, 0, 255, 0.7);
    padding: 4px 5px 3px;
    background:
      linear-gradient(180deg, rgba(0, 255, 0, 0.06), rgba(0, 255, 0, 0.01)),
      repeating-linear-gradient(0deg, rgba(0, 0, 255, 0.06) 0 1px, transparent 1px 4px);
    display: flex;
    flex-direction: column;
    gap: 2px;
    min-height: 54px;
  }

  .hud-label-row {
    display: flex;
    align-items: center;
    justify-content: space-between;
    color: var(--accent);
    font-size: 10px;
    line-height: 11px;
    font-weight: 800;
    letter-spacing: 0.4px;
  }

  .hud-glyph {
    color: var(--line);
    font-size: 11px;
    line-height: 11px;
  }

  .hud-meter {
    display: grid;
    grid-template-columns: 22px 1fr;
    align-items: center;
    column-gap: 4px;
    min-height: 10px;
  }

  .meter-label {
    color: var(--muted);
    font-size: 9px;
    line-height: 10px;
    font-weight: 800;
    letter-spacing: 0.3px;
  }

  .meter-track {
    height: 6px;
    border: 1px solid rgba(0, 0, 255, 0.65);
    background: rgba(255, 255, 255, 0.75);
    position: relative;
    overflow: hidden;
  }

  .meter-fill {
    display: block;
    height: 100%;
    background:
      linear-gradient(90deg, rgba(0, 255, 0, 0.8), rgba(0, 255, 0, 0.38)),
      repeating-linear-gradient(90deg, rgba(0, 255, 0, 0.9) 0 2px, rgba(0, 255, 0, 0.2) 2px 4px);
  }

  .temp-fill {
    background:
      linear-gradient(90deg, rgba(0, 0, 255, 0.85), rgba(0, 0, 255, 0.35)),
      repeating-linear-gradient(90deg, rgba(0, 0, 255, 0.9) 0 2px, rgba(0, 0, 255, 0.18) 2px 4px);
  }

  .hud-scan {
    margin-top: 1px;
    border-top: 1px solid rgba(0, 0, 255, 0.35);
    color: var(--muted);
    font-size: 9px;
    line-height: 10px;
    font-weight: 700;
    display: flex;
    justify-content: space-between;
    letter-spacing: 0.4px;
  }

  .headline-list {
    flex: 1;
    min-height: 0;
    display: grid;
    grid-template-rows: repeat(6, 1fr);
    gap: 1px;
  }

  .headline-item {
    border-left: 3px solid var(--line);
    padding-left: 7px;
    font-size: 15px;
    line-height: 19px;
    color: var(--text);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-weight: 700;
    display: flex;
    align-items: center;
  }

  .corner-note {
    position: absolute;
    right: 8px;
    bottom: 6px;
    color: var(--muted);
    font-size: 13px;
    font-weight: 700;
    background: rgba(255, 255, 255, 0.86);
    border: 1px solid var(--line);
    padding: 1px 6px;
    line-height: 18px;
  }
</style>
