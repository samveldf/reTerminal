---
import dayjs from 'dayjs';
import BaseLayout from '../layouts/BaseLayout.astro';
import { getGoogleHeadlines } from '../services/newsService';
import { getWeather } from '../services/weatherService';

const weather = await getWeather();
const news = await getGoogleHeadlines();
const now = dayjs();
---

<BaseLayout>
  <main class="epaper-screen page1-screen">
    <header class="cyber-header">
      <div class="header-title">PAGE 1 // WEATHER + TOP NEWS</div>
      <div class="header-time">{`TOKYO ${now.format('MM-DD HH:mm')}`}</div>
    </header>

    <div class="split-layout">
      <section class="panel weather-panel">
        <div class="section-head">TODAY + NEXT 3 DAYS</div>
        <div class="weather-grid">
          {
            weather.days.map((day, idx) => (
              <article class={`day-card ${idx === 0 ? 'day-card-hero' : 'day-card-compact'}`}>
                <div class="day-head">
                  <span>{day.label}</span>
                  <span>{day.date}</span>
                </div>
                <div class="icon-line">
                  <span class="icon-emoji">{day.icon}</span>
                  <span class="icon-symbol">{day.symbol}</span>
                </div>
                <div class="day-desc">{day.description}</div>
                <div class="day-item">{`MAX ${day.maxTemp}°C  MIN ${day.minTemp}°C  HUM ${day.humidity}%`}</div>
              </article>
            ))
          }
        </div>
      </section>

      <section class="panel news-panel">
        <div class="section-head">TOP HEADLINES</div>
        <div class="headline-list">
          {
            news.headlines.slice(0, 6).map((item, idx) => (
              <div class="headline-item">{`${idx + 1}. ${item.title}`}</div>
            ))
          }
        </div>
      </section>
    </div>

    <div class="corner-note">1 / 3</div>
  </main>
</BaseLayout>

<style>
  .page1-screen {
    gap: 6px;
    padding: 6px;
    position: relative;
  }

  .split-layout {
    flex: 1;
    min-height: 0;
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .weather-panel {
    flex: 11;
    min-height: 0;
    border-color: var(--line);
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .news-panel {
    flex: 9;
    min-height: 0;
    border-color: var(--warn);
    padding: 6px;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .section-head {
    height: 20px;
    color: var(--accent);
    font-size: 14px;
    font-weight: 800;
    line-height: 20px;
    letter-spacing: 0.6px;
  }

  .weather-grid {
    flex: 1;
    min-height: 0;
    display: grid;
    grid-template-columns: 1.18fr 1fr;
    grid-template-rows: repeat(3, 1fr);
    gap: 5px;
    overflow: hidden;
  }

  .day-card {
    border: 1px solid var(--line);
    padding: 5px 6px;
    overflow: hidden;
    background:
      linear-gradient(180deg, rgba(0, 0, 255, 0.03), rgba(255, 255, 255, 0) 45%),
      #ffffff;
    display: flex;
    flex-direction: column;
    gap: 2px;
  }

  .day-head {
    display: flex;
    justify-content: space-between;
    color: var(--accent);
    font-size: 13px;
    font-weight: 700;
    margin-bottom: 1px;
    line-height: 15px;
  }

  .icon-line {
    display: flex;
    align-items: center;
    gap: 5px;
    margin-bottom: 1px;
    line-height: 18px;
  }

  .icon-emoji {
    color: var(--line);
    font-size: 18px;
    line-height: 18px;
  }

  .icon-symbol {
    color: var(--line);
    font-size: 20px;
    font-weight: 800;
    line-height: 20px;
  }

  .day-desc {
    font-size: 13px;
    line-height: 14px;
    color: var(--text);
    margin-bottom: 0;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 14px;
  }

  .day-item {
    font-size: 12px;
    line-height: 14px;
    color: var(--muted);
    font-weight: 700;
  }

  .day-card-hero {
    grid-column: 1;
    grid-row: 1 / span 3;
    border-width: 2px;
    border-color: var(--line);
    padding: 8px 9px;
    gap: 3px;
  }

  .day-card-hero .day-head {
    font-size: 17px;
    line-height: 19px;
    margin-bottom: 2px;
  }

  .day-card-hero .icon-line {
    gap: 7px;
    margin-bottom: 2px;
    line-height: 28px;
  }

  .day-card-hero .icon-emoji {
    font-size: 28px;
    line-height: 28px;
  }

  .day-card-hero .icon-symbol {
    font-size: 33px;
    line-height: 33px;
  }

  .day-card-hero .day-desc {
    font-size: 20px;
    line-height: 22px;
    min-height: 22px;
  }

  .day-card-hero .day-item {
    font-size: 14px;
    line-height: 17px;
  }

  .day-card-compact .icon-symbol {
    font-size: 17px;
    line-height: 18px;
  }

  .day-card-compact .icon-emoji {
    font-size: 15px;
    line-height: 15px;
  }

  .day-card-compact .day-head {
    font-size: 12px;
    line-height: 14px;
  }

  .day-card-compact .day-desc {
    font-size: 11px;
    line-height: 12px;
    min-height: 12px;
  }

  .day-card-compact .day-item {
    font-size: 9px;
    line-height: 10px;
  }

  .headline-list {
    flex: 1;
    min-height: 0;
    display: grid;
    grid-template-rows: repeat(6, 1fr);
    gap: 1px;
  }

  .headline-item {
    border-left: 3px solid var(--line);
    padding-left: 6px;
    font-size: 12px;
    line-height: 15px;
    color: var(--text);
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    font-weight: 700;
  }

  .corner-note {
    position: absolute;
    right: 8px;
    bottom: 6px;
    color: var(--muted);
    font-size: 13px;
    font-weight: 700;
    background: rgba(255, 255, 255, 0.86);
    border: 1px solid var(--line);
    padding: 1px 6px;
    line-height: 18px;
  }
</style>
