---
import BaseLayout from '../layouts/BaseLayout.astro';

const featureImageUrl = import.meta.env.FEATURE_IMAGE_URL || '/DSC_2962.jpg';
---

<BaseLayout>
  <main class="photo-screen">
    <img src={featureImageUrl} alt="feature image" class="photo-image" />
  </main>
</BaseLayout>

<style>
  .photo-screen {
    width: 800px;
    height: 480px;
    position: relative;
    background: #ffffff;
    overflow: hidden;
  }

  .photo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center center;
    filter: brightness(1.08) contrast(1.03) saturate(1.06);
    display: block;
  }
</style>
