---
import BaseLayout from '../layouts/BaseLayout.astro';

const featureImageUrl = import.meta.env.FEATURE_IMAGE_URL || '/DSC_2962.jpg';
---

<BaseLayout>
  <main class="photo-screen">
    <img src={featureImageUrl} alt="feature image" class="photo-image" />
    <div class="photo-top">./DSC_2962.jpg</div>
    <div class="photo-bottom">3 / 3</div>
  </main>
</BaseLayout>

<style>
  .photo-screen {
    width: 800px;
    height: 480px;
    position: relative;
    background: #05070a;
    overflow: hidden;
  }

  .photo-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center 46%;
    display: block;
  }

  .photo-top {
    position: absolute;
    top: 4px;
    left: 6px;
    padding: 2px 8px;
    background: rgba(5, 7, 10, 0.65);
    border: 1px solid #39ff14;
    color: #39ff14;
    font-size: 28px;
    font-weight: 700;
    line-height: 34px;
  }

  .photo-bottom {
    position: absolute;
    right: 8px;
    bottom: 6px;
    padding: 2px 10px;
    background: rgba(5, 7, 10, 0.6);
    border: 1px solid #00f0ff;
    color: #9defff;
    font-size: 30px;
    font-weight: 700;
    line-height: 34px;
  }
</style>
